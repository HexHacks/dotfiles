

function exec_sway()
{
    # If running trom tty1 start sway
    if [[ $(tty) == "/dev/tty1" ]]; then
        sway
        #exit 0
    fi
}

function post_shell_exec()
{
    exec_sway
}

function exec_config_dir()
{
    zsh_dir=$XDG_CONFIG_HOME/zsh

    if [[ -d "$zsh_dir" ]] then
        scripts=($zsh_dir/*.zsh)
        foreach s in $scripts
            test -r "$s" && . "$s";
        end
    else
        echo Found no zsh script directory.
        echo Functionality of this shell is reduced.
   fi

}

exec_config_dir
post_shell_exec
